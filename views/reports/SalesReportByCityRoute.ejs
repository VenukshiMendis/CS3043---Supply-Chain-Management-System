            <% if(action == 'list') { %>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        
                        <div class="col"><h2 class="text-right mt-2 mb-2"> Sales Report by City </h2></div>
                        <div class="col"></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>City</th>
                                <th>No of Orders</th>
                                <th>Total Income(Rs)</th>
                            </tr>
                            
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            
                            <tr>
                                
                                <td><%= data.city %></td>
                                <td><%= data.no_of_orders %></td>
                                <td><%= data.total_income %></td>
                                
                            </tr>
                            <%
                            });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="3">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

