<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/products.css">
        <title>
            
        </title>
    </head>
    <body>
        
    

        <div class="container">
            <header>
                <div class="content-wrapper">
                    
                    <nav>
                        <a href="/">Home</a>
                        <a href="/orderHistory">Back</a>
                    </nav>
                    
                </div>
            </header>
    
            
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>

            <% } else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        
                        <div class="col"></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Item ID</th>
                                <th>Product Name</th>
                                <th> Unit price</th>
                                 <th>Quantity</th>
                                 <th>Total</th>
                                 
                                
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.product_ID %></td>
                                <td><%= data.product_name %></td>
                                <td><%= data.unit_price %>.00</td>
                                <td><%= data.quantity %> items</td>
                                <td><%= data.total %>.00</td>
                               
                                <td></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                        <h3 align="left"><b>TOTAL : <%= total[0].total %>.00 </b></h5>
                        
                        <div class="wrapper">
                                <form action="/unconfirmedOrders/confirm" method="post"> 
                                <input type="text" name="orderID" value='<%= orderID %>' hidden>
                                <input type="submit" style="background-color: blue;color: white;border: 1px solid #e4e4e4;padding: 8px;border-radius: 3px;cursor: pointer;" id="Confirm" class="btn" value="Confirm ">
                                
                                </form>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>