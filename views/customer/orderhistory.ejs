<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/cart.css">
        <title>
            
        </title>
    </head>
    <body>
        
    

        <div class="container">
            <header>
                <div class="content-wrapper">
                    
                    <nav>
                        <a href="/">Home</a>
                        
                    </nav>
                    
                </div>
            </header>
    
            
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>

            <% } else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        
                        <div class="col"></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Order ID</th>
                                <th>Route Name</th>
                                <th>Date</th>
                                <th> Address </th>
                                <th>Total</th>
                                
                                <th>Action</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.order_ID %></td>
                                <td><%= data.route_name %></td>
                                <td><%= data.order_date %></td>
                                <td><%= data.address %> </td>
                                <td><%= data.total_price %>.00</td>
                                <form action="/orderHistory/orderHistoryProducts" method="post">
                                <td>
                                     
                                    <input type="text" name="order_ID" value='<%= data.order_ID %>' hidden>
                                    
                                    <input type="submit" class="btn" value="VIEW"  >
                                    
                                </td>
                               
                            </form>
                                
                                <td></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                       
                    </div>
               
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>